{
  "name": "pruga-vscode-builder",
  "displayName": "pruga-vscode-builder",
  "description": "extensible and configurable builder",
  "version": "0.0.1",
  "publisher": "domogled",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:pruga.js"
  ],
  "main": "./out/src/extension",
  "icon": "images/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "pruga.compile",
        "title": "pruga compile"
      },
      {
        "command": "pruga.build",
        "title": "pruga build all files"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^3.1.2",
    "typescript": "^2.0.9",
    "vscode": "^1.0.0"
  }
}
